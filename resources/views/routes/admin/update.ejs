
<div class="row container-fluid justify-content-center">
  <div class="col-lg-6">
    <% if(params.errors) {%>
      <% params.errors.map(({msg}) => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error</strong> <%=msg%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% }) %>
  <% } %>
  <% if(params.success) {%>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success</strong> <%=params.success%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  <% } %>
    <form action="/admin/update" method="POST">
    <div class="form-floating mb-3">
      <input name="userid" type="text" value="<%=params.userid%>"  class="form-control form-control-lg" id="floatingInput" placeholder="Enter User Id">
    </div>
    <div class="form-floating mb-3">
      <input name="deposit" type="text" value="<%=params.deposit%>" class="form-control form-control-lg" id="floatingInput" placeholder="Deposit">
    </div>
    <div class="form-floating mb-3">
      <input name="earning" type="text" value="<%=params.earning%>" class="form-control form-control-lg" id="floatingInput" placeholder="Earning">
    </div>
    <div class="form-floating mb-3">
      <input name="withdrawal" type="text" value="<%=params.withdrawal%>" class="form-control form-control-lg" id="floatingInput" placeholder="Withdrawla">
    </div>
    <div class="form-floating mb-3">
      <input name="balance" type="text" value="<%=params.balance%>" class="form-control form-control-lg" id="floatingInput" placeholder="Balance">
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">Update User</button>
    </div>
  </form>
  </div>
</div>