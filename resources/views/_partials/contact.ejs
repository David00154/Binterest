<section id="contact" class="contact-us section-bg">
	<div class="container pb-5">
		<div class="row">
			<div class="col-lg-12">

				<div class="title text-center">
					<h2><%=siteData.contact.title.split(' ')[0]%><span class="color">
							<%=siteData.contact.title.split(' ')[1]%></span></h2>
					<div class="border-meghna"></div>
				</div>
			</div>


			<div class="contact-info col-lg-6" data-aos="fade-left">
				<%# <h3>{{ .subtitle | markdownify }}</h3>
				<p> {{ .content | markdownify }} </p> %>

				<div class="contact-details">
					<% siteData.contact.contact_list.map(({info, icon}) => { %>
					<div class="con-info clearfix">
						<i class="<%=icon%>"></i>
						<span><%=info%></span>
					</div>
					<% }) %>
				</div>
			</div>
			<div class="col-lg-6" data-aos="fade-right">
				<form id="contact-form" class="form-meghna" method="post" action="<%=siteData.contact.contact_form.form_action%>" role="form">
					<div class="form-group">
						<input type="text" placeholder="<%=siteData.contact.contact_form.name%>" class="form-control" name="name" id="name">
					</div>
					<div class="form-group">
						<input type="email" placeholder="<%=siteData.contact.contact_form.email%>" class="form-control" name="email" id="email">
					</div>
					<div class="form-group">
						<input type="text" placeholder="<%=siteData.contact.contact_form.subject%>" class="form-control" name="subject" id="subject">
					</div>
					<div class="form-group">
						<textarea rows="6" placeholder="<%=siteData.contact.contact_form.message%>" class="form-control" name="message" id="message"></textarea>
					</div>
					<div id="cf-submit">
						<button type="submit" id="contact-submit" class="btn btn-transparent btn-block"
							value="<%=siteData.contact.contact_form.submit%>"><%=siteData.contact.contact_form.submit%></button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>